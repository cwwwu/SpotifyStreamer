<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.wallacewu.spotifystreamer.MainActivity">

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    -->

    <fragment
        android:id="@+id/fragment_artist_search"
        android:name="com.wallacewu.spotifystreamer.ArtistSearchFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:layout="@layout/fragment_artist_search" />

    <FrameLayout
        android:id="@+id/top_tracks_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6" />

</LinearLayout>